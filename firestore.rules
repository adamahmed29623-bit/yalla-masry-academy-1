rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- وظائف الحماية الملكية ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- تأمين ملفات المستخدمين (الأمهات والطلاب) ---
    match /users/{userId} {
      // السماح بجلب ملف شخص واحد فقط (مثلاً عند الدخول لصفحة ملفه)
      allow get: if isSignedIn();
      
      // ثغرة الـ list تم تقييدها: لا يمكن لأي شخص سحب كل البيانات 
      // إلا إذا كان هناك استعلام (Query) محدد (مثل المتصدرين فقط)
      allow list: if isSignedIn() && request.query.limit <= 20; 

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // الحذف يتم فقط من خلال الإدارة (Admin)
    }
    
    // --- ملفات المعلمين ---
    match /teachers/{teacherId} {
      allow get, list: if isSignedIn();
      allow create, update: if isOwner(teacherId);
      allow delete: if false;
    }

    // --- ميزة مضافة: سجلات التقدم (Progress) ---
    // لضمان أن تقدم الطفل في الدروس لا يراه إلا هو وأمه
    match /progress/{progressId} {
      allow read, write: if isSignedIn() && (isOwner(resource.data.userId) || isOwner(request.resource.data.userId));
    }
  }
}
